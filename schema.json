{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$ref": "#/definitions/Config",
  "definitions": {
    "Config": {
      "required": [
        "Hooks"
      ],
      "properties": {
        "Hooks": {
          "items": {
            "$schema": "http://json-schema.org/draft-04/schema#",
            "$ref": "#/definitions/Hook"
          },
          "type": "array"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "Hook": {
      "required": [
        "id",
        "command",
        "args",
        "working"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "command": {
          "type": "string"
        },
        "args": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "working": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    }
  }
}